@{
    List<string> isimler = new List<string>()
    {
        "Ahmet",
        "Mehmet",
        "Ayşe",
        "Fatma",
        "Hayriye"
    };

    int sayac = 0;
}

@for (int i = 0; i < isimler.Count; i++)
{
    @isimler[i] <br />
}

<ol class="mt-3">
    @foreach (var ad in isimler)
    {
        <li>@ad</li>
    }
</ol>

<table class="table mt-3">
    <tr>
        <th>Adı</th>
    </tr>
    @while (sayac < isimler.Count)
    {
        <tr>
            <td>@isimler[sayac]</td>
        </tr>
        sayac++;
    }
</table>